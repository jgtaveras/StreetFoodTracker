<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="StreetFoodTracker.Features.Home.DrawerMenu.DrawerMenuScreen" Icon="ic_menu_white" Title="Master Title">
	<ContentPage.Content>
		<ListView 
				CachingStrategy="RecycleElement" 
				RowHeight="60" 
				ItemsSource="{Binding Options}" 
				SeparatorVisibility="None" 
				x:Name="drawerOptions">
			<ListView.Header>
				<StackLayout Margin="0,0,0,5" Spacing="10" HeightRequest="200" BackgroundColor="Silver">
					<Label Text="Header" />
					<Image Source="icon" />
				</StackLayout>
			</ListView.Header>
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Orientation="Horizontal">
							<Label Text="{Binding OptionTitle}" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black" FontSize="20" />
							<Label Text="{Binding Image}" VerticalOptions="Center" HorizontalOptions="End" TextColor="Black" FontSize="20" />
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>